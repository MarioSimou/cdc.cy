{
  "name": "cdc.cy",
  "version": "1.0.0",
  "description": "Cyprus Developer Communtiy",
  "bugs": {
    "url": "https://github.com/cyprus-developer-community/cdc.cy/issues"
  },
  "license": "MIT",
  "author": "Patrick Heneise <yassas@heneise.co> (https://heneise.co)",
  "contributors": [
    "Patrick Heneise (https://github.com/PatrickHeneise)"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --dev",
    "dev:remix": "remix dev",
    "generate:css": "npx windicss './app/**/*.jsx' -to ./app/styles/windi.css -f windi.config.js",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write ."
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@octokit/auth-app": "^3.6.1",
    "@octokit/graphql": "^4.8.0",
    "@remix-run/node": "^v0.0.0-experimental-9aba8b51",
    "@remix-run/react": "^v0.0.0-experimental-9aba8b51",
    "@remix-run/serve": "^v0.0.0-experimental-9aba8b51",
    "@zentered/issue-forms-body-parser": "^1.4.3",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^v0.0.0-experimental-9aba8b51"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@remix-run/dev": "^v0.0.0-experimental-9aba8b51",
    "@remix-run/eslint-config": "^v0.0.0-experimental-9aba8b51",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "windicss": "^3.5.1"
  },
  "engines": {
    "node": ">=14"
  }
}
